
<div class="modal-content">
    <div class="modal-header">
        <h3 class="modal-title">@ViewBag.add_upd Add Complaint </h3>
        <button type="button" class="close" data-dismiss="modal" onclick="CloseModal()">&times;</button>
    </div>
    @*<button type="button" class="btn bg-primary" id="alert" onclick="ShowMessage('1','record added');">Launch <i class="icon-play3 ml-2"></i></button>*@

    <div class="modal-body">


        <div class="form-group">
            <div class="row">

                <div class="col-sm-4">
                    <label>Register Date</label>
                    <input type="date" class="form-control"
                           id="RegDate" name="RegDate" value="dd/mm/yyyy">
                </div>

                <div class="col-sm-4">
                    <label>Register Type</label>
                    <span class="text-danger">*</span>
                    <select id="ddlRegType" required
                            class="form-control">
                        <option value="">Select</option>
                        <option value="1">Call</option>
                        <option value="2">Letter</option>
                    </select>
                </div>


                <div class="col-sm-4">
                    <label>Citizen Name.</label>
                    <input type="hidden" id="hfComplaint" />
                    <span class="text-danger">*</span>
                    <input type="text" placeholder="Citizen Name." class="form-control" id="citizen_name" onkeypress="return isAlpha(event.keyCode);" required>
                </div>


                <div class="col-sm-4">
                    <label>Citizen Email-ID.</label>
                    <input type="hidden" id="hfComplaint" />
                    <span class="text-danger">*</span>
                    <input type="email" placeholder="Citizen Name." class="form-control" id="citizen_email"  required>
                </div>

                </div>
                </div>
               
              
                <div class="form-group">
                    <div class="row">

                <div class="col-sm-4">
                    <label>Contact Number.</label>
                    <input type="hidden" id="hfComplaint" />
                    <span class="text-danger">*</span>
                    <input type="text" placeholder="Complaint Contact No." class="form-control" maxlength="10" id="txtContactNo" onkeypress="return isAlpha(event.keyCode);" required>
                </div>

                        <div class="col-sm-4">
                    <label> Complaint Type</label>
                    <span class="text-danger">*</span>
                    <select id="ddlComplaint_Type" required="" class="form-control"><option value="">Select</option><option value="1">REMOVAL OF GARBAGE</option><option value="2">ABSENTEEISM OF SWEEPERS</option><option value="3">OVERFLOWING OF GARBAGE BIN</option><option value="4">PROVISION OF GARBAGE BIN</option><option value="5">BROKEN BIN</option><option value="6">IMPROPER SWEEPING</option><option value="7">SPILLING OF GARBAGE FROM LORRY</option><option value="8">GARBAGE LORRY WITHOUT NET</option><option value="9">ABSENTEEISM OF DOOR TO DOOR GARBAGE COLLECTOR</option><option value="10">NUISANCE BY GARBAGE COMPACTOR OR TRUCK</option><option value="12">SHIFTING OF GARBAGE BIN</option><option value="13">BURNING OF GARBAGE</option><option value="14">DEATH OF STRAY ANIMALS</option><option value="29">SPILLAGE OF GARBAGE FROM BOV</option></select>
                    </div>


                        <div class="col-sm-4">
                            <label>Ward</label>
                            <span class="text-danger">*</span>
                            <select id="ddlWard" required
                                    class="form-control" onchange="SelectCircleByWard()">
                                <option value="">Select</option>
                            </select>
                        </div>

                        <div class="col-sm-4">
                            <label>Circle.</label>
                            <input type="hidden" id="hfComplaint" />
                            <span class="text-danger">*</span>
                            <input type="text" placeholder="Circle" class="form-control" id="txt_circle" disabled>
                        </div>
                       
                        </div>
                        
                       
                              <div class="form-group">
                                    <div class="row">
                        <div class="col-sm-4">
                            <label>Zone</label>
                            <input type="hidden" id="hfComplaint" />
                            <span class="text-danger">*</span>
                            <input type="text" placeholder="Zone" class="form-control" id="txt_Zone">
                        </div>

                        <div class="col-sm-4">
                            <label>Upload File</label>
                            <input type="file" id="file" name="file" class="form-control h-auto" accept=".jpg,.jpeg,.png,.gif,.bmp" value="">

                        </div>

                                        <div class="col-sm-4">
                                    <label>Location</label>
                                    <span class="text-danger">*</span>
                                    <textarea rows="3" cols="3" class="form-control" placeholder="Location" id="complaint_add" required=""></textarea>
                                </div>

                                <div class="col-sm-4">
                                    <label>Description</label>
                                    <span class="text-danger">*</span>
                                    <textarea rows="3" cols="3" class="form-control" placeholder="Description" id="complaint_descrip" required=""></textarea>
                                </div>
                                <input type="hidden" id="add_upd1" />
                                <input type="hidden" id="SComplaintId" />
                
                                
               </div>
               </div>

